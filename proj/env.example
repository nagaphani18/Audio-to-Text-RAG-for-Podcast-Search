# OpenAI API (optional, for enhanced responses)
OPENAI_API_KEY=your_openai_api_key_here

# HuggingFace (for embeddings and models)
HUGGINGFACE_API_KEY=your_huggingface_token_here

# Model configurations
WHISPER_MODEL=base  # Options: tiny, base, small, medium, large
EMBEDDING_MODEL=all-MiniLM-L6-v2  # Options: all-MiniLM-L6-v2, all-mpnet-base-v2, multi-qa-MiniLM-L6-v2

# Text processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNKS_PER_EPISODE=1000

# Vector database
CHROMA_PERSIST_DIRECTORY=./data/database
COLLECTION_NAME=podcast_episodes

# Audio processing
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
MAX_AUDIO_DURATION=7200  # 2 hours in seconds

# Search and retrieval
TOP_K_RESULTS=10
SIMILARITY_THRESHOLD=0.7

# Application settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
DEBUG_MODE=False

# Caching
CACHE_TTL=3600  # 1 hour in seconds
ENABLE_CACHING=True 